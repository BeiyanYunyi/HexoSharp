{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "@types/service-worker-mock",
      "@types/node"
    ],
    "jsx": "react"
  },
  "include": ["src", "test", "webpack.config.ts"],
  "exclude": ["node_modules", "dist"]
}
